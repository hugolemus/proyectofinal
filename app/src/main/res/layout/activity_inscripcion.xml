<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="32dp"
    tools:context=".Inscripcion.Inscripcion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ASIGNACION ALUMNO"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/txtID_Asig_Alum"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:hint="No."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Alumno"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtID_Asig_Alum"
        tools:layout_editor_absoluteX="32dp" />

    <Spinner
        android:id="@+id/txtID_ALUMNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Curso"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtID_ALUMNO"
        tools:layout_editor_absoluteX="32dp" />

    <Spinner
        android:id="@+id/txtID_CURSO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Grado"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtID_CURSO"
        tools:layout_editor_absoluteX="32dp" />

    <Spinner
        android:id="@+id/txtID_GRADO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Seccion"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txtID_GRADO"
        tools:layout_editor_absoluteX="32dp" />

    <Spinner
        android:id="@+id/txtID_SECCION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/btnRegistroMascota"
        android:layout_width="311dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:onClick="onClick"
        android:text="Registrar "
        app:backgroundTint="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtID_SECCION" />

    <Button
        android:id="@+id/button5"
        android:layout_width="310dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:onClick="Lista"

        android:text="REPORTE"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:drawableLeft="@drawable/ic_action_buscar"
        android:onClick="Buscar"
        android:text="Buscar"

        android:textColor="#000"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtID_Asig_Alum" />

    <Button
        android:id="@+id/button3"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:onClick="Modificar"
        android:text="Modificar"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistroMascota" />

    <Button
        android:id="@+id/button4"
        android:layout_width="312dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:onClick="Eliminar"
        android:text="Eliminar"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />


</androidx.constraintlayout.widget.ConstraintLayout>


