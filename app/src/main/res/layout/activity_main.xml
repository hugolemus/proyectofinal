<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <RelativeLayout
          android:layout_marginTop="32dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/txtdashboard"
              android:text="SMART EDUCATION"
              android:textSize="22sp"
              android:textColor="#000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:layout_marginTop="6dp"
              android:layout_below="@id/txtdashboard"
              android:text="Registrate"
              android:textSize="14sp"
              android:textColor="#000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>



          <ImageView
              android:layout_alignParentRight="true"
              android:src="@drawable/estudiante"
              android:layout_width="82dp"
              android:layout_height="82dp"/>

      </RelativeLayout>

      <GridLayout
          android:columnCount="2"
          android:rowCount="3"
          android:alignmentMode="alignMargins"
          android:columnOrderPreserved="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <!-- PRIMER CARD  -->
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnWeight="1"
              android:layout_rowWeight="1"
              app:cardElevation="6dp"
              app:cardCornerRadius="12dp"
              android:layout_margin="12dp"
              >
             <LinearLayout
                 android:id="@+id/img_alumno"
                 android:onClick="onClick"
                 android:orientation="vertical"
                 android:padding="16dp"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <ImageView
                     android:src="@drawable/alumnos"
                     android:layout_width="80dp"
                     android:layout_height="80dp" />
                 <TextView
                     android:layout_marginTop="12dp"
                     android:textColor="#6f6f6f"
                     android:textSize="18sp"
                     android:text="Alumno"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
          </androidx.cardview.widget.CardView>

          <!-- SEGUNDO CARD -->
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnWeight="1"
              android:layout_rowWeight="1"
              app:cardElevation="6dp"
              app:cardCornerRadius="12dp"
              android:layout_margin="12dp"
              >
              <LinearLayout
                  android:id="@+id/img_grado"
                  android:onClick="onClick"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView

                      android:src="@drawable/grados"
                      android:layout_width="80dp"
                      android:layout_height="80dp" />
                  <TextView
                      android:layout_marginTop="12dp"
                      android:textColor="#6f6f6f"
                      android:textSize="18sp"
                      android:text="Grado"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>

          <!-- TERCER CARD -->
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnWeight="1"
              android:layout_rowWeight="1"
              app:cardElevation="6dp"
              app:cardCornerRadius="12dp"
              android:layout_margin="12dp"
              >
              <LinearLayout
                  android:id="@+id/img_seccion"
                  android:onClick="onClick"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <ImageView
                      android:layout_width="75dp"
                      android:layout_height="77dp"
                      android:src="@drawable/seccion" />
                  <TextView
                      android:layout_marginTop="12dp"
                      android:textColor="#6f6f6f"
                      android:textSize="18sp"
                      android:text="Seccion"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>

          <!-- CUARTO CARD -->
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnWeight="1"
              android:layout_rowWeight="1"
              app:cardElevation="6dp"
              app:cardCornerRadius="12dp"
              android:layout_margin="12dp"
              >
              <LinearLayout
                  android:id="@+id/img_curso"
                  android:onClick="onClick"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView

                      android:src="@drawable/cursos"
                      android:layout_width="80dp"
                      android:layout_height="80dp" />
                  <TextView
                      android:layout_marginTop="12dp"
                      android:textColor="#6f6f6f"
                      android:textSize="18sp"
                      android:text="Cursos"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>


          <!-- QUINTO CARD -->
          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_columnWeight="1"
              android:layout_rowWeight="1"
              app:cardElevation="6dp"
              app:cardCornerRadius="12dp"
              android:layout_margin="12dp"
              >
              <LinearLayout
                  android:id="@+id/img_inscripcion"
                  android:onClick="onClick"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:src="@drawable/inscripcion"
                      android:layout_width="80dp"
                      android:layout_height="80dp" />
                  <TextView
                      android:layout_marginTop="12dp"
                      android:textColor="#6f6f6f"
                      android:textSize="18sp"
                      android:text="Inscripcion"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>



      </GridLayout>

  </LinearLayout>




</ScrollView>